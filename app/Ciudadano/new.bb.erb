<div data-role="page">

  <div data-role="header" data-position="inline">
    <%= link_to "Back", :action => :index %>
    <h1>New Ciudadano</h1>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :create %>">
      <input type="hidden" name="id" value="<%= @ciudadano.object %>"/>
      <table>
          
            <tr>
                <td class="itemLabel">Nombre: </td>
                <td class="itemValue"><input type="text" name="ciudadano[nombre]"/></td>
            </tr>
          
            <tr>
                <td class="itemLabel">Apellido: </td>
                <td class="itemValue"><input type="text" name="ciudadano[apellido]"/></td>
            </tr>
          
            <tr>
                <td class="itemLabel">Ci: </td>
                <td class="itemValue"><input type="text" name="ciudadano[ci]"/></td>
            </tr>
          
            <tr>
                <td class="itemLabel">Tlf: </td>
                <td class="itemValue"><input type="text" name="ciudadano[tlf]"/></td>
            </tr>
          
            <tr>
                <td class="itemLabel">Email: </td>
                <td class="itemValue"><input type="text" name="ciudadano[email]"/></td>
            </tr>
          
      </table>
      <input type="submit" value="Create"/>
    </form>
  </div>

</div>
