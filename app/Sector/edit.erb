<div data-role="page">

  <div data-role="header" data-position="inline">
    <h1>Edit <%= @sector.nombre %></h1>
    <a href="<%= url_for :action => :show, :id => @sector.object %>" class="ui-btn-left" data-icon="back" data-direction="reverse">
      Cancel
    </a>
    <a href="<%= url_for :action => :delete, :id => @sector.object %>" class="ui-btn-right" data-icon="delete" data-direction="reverse">
      Delete
    </a>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :update %>">
      <input type="hidden" name="id" value="<%= @sector.object %>"/>
      
          <div data-role="fieldcontain">
            <label for="sector[nombre]" class="fieldLabel">Nombre</label>
            <input type="text" id="sector[nombre]" name="sector[nombre]" value="<%= @sector.nombre %>" <%= placeholder( "Nombre" ) %> />
          </div>
      
      <input type="submit" value="Update"/>
    </form>
  </div>

</div>
